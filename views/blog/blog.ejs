<% include ../partials/header %>
<div class="row blog">

  <main role="main" class="container">
    <div class="row">
      <div class="col-lg-8 col-10 pl-4 blog-main">

        <div class="blog-post">
          <!-- /.blog-post -->
          <br>
          <h2 class="blog-post-title"><%= blog.mainHeader %>
          </h2>
          <p class="blog-post-meta"><%= blog.monthYear %>, <a href="#"><%= blog.nameAuthor %></a></p>
          <img src="/imgBlog/1.jpg" class="blog-img rounded" alt="Новостройка">
          <p><%- blog.content %></p>
          <hr>
        </div><!-- /.blog-post -->
<!-- buttons -->
          <div class="row AllPropLinks_buttons">
            <% if(currentUser){ %>
            <a class="btn btn-outline-success btn-sm" href="/blogAll/blogNew">New </a>
            <a class="btn btn-outline-warning btn-sm" href="/blog/blogAll/<%= blog._id %>/blogEdit">Edit </a>
            <form id="delete-form" action="/blog/blogAll/<%= blog._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-outline-danger">Delete</button>
              <% }else{ %>
              <% } %>
            </form>
          </div> <!-- buttons -->
          <hr>
        




        <nav class="blog-pagination">
          <a class="btn btn-outline-primary" href="#">Older</a>
          <a class="btn btn-outline-secondary disabled" href="#" tabindex="-1" aria-disabled="true">Newer</a>
        </nav>

      </div><!-- /.blog-main -->

      <aside class="col-md-4 blog-sidebar">

        <div class="p-4">
          <h4 class="font-italic">Archives</h4>
          <ol class="list-unstyled mb-0">
            <li><a href="#">March 2014</a></li>
            <li><a href="#">February 2014</a></li>
            <li><a href="#">January 2014</a></li>
            <li><a href="#">December 2013</a></li>
            <li><a href="#">November 2013</a></li>
            <li><a href="#">October 2013</a></li>
            <li><a href="#">September 2013</a></li>
            <li><a href="#">August 2013</a></li>
            <li><a href="#">July 2013</a></li>
            <li><a href="#">June 2013</a></li>
            <li><a href="#">May 2013</a></li>
            <li><a href="#">April 2013</a></li>
          </ol>
        </div>


      </aside><!-- /.blog-sidebar -->

    </div><!-- /.row -->

  </main><!-- /.container -->
</div>



<% include ../partials/footer %>